        $(document).ready(function () {
            $('.menu-forlar .menu-links li').click(function () {

                // Fecha todos os submenus abertos
                $('.menu-forlar .menu-links li').not(this).removeClass('mostrarMenu'); // not(this) diz que a class nao vai ser removida desse, ou seja nao vai ser removido a class do item que for clicado

                // Toggle para mostrar ou ocultar o submenu clicado
                $(this).toggleClass('mostrarMenu');


            });
        });


        //SCRIPT HAMBURGUER MENU
        $(document).ready(function () {
            let menu = $('.menu-forlar');
            let menuBtnBurguer = $('.bx-menu');

            menuBtnBurguer.on('click', function () {
                menu.toggleClass('fechar');
            });
        });

        // $(document).keydown((e)=>{
