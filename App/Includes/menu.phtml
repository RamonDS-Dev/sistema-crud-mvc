        // })

        // abrir e fechar menu utilizando a tecla seta esquerda e fechar tecla seta direita
        $(document).keydown((key) => {
            let menuKey = $('.menu-forlar')
            let btnBurguer = $('.bx-menu')

            if (key.keyCode == 37) {
                menuKey.toggleClass('fechar')
            } else if (key.keyCode == 39) {
                menuKey.removeClass('fechar')
            }
        })


